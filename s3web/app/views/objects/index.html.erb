<div class="s3-app-container">
  <h1>Listing Objects for /<%= @bucket_name %></h1>
  <%= link_to 'Upload New object', new_bucket_object_path %>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Object Size (bytes)</th>
      <th>Last Modified</th>
      <th colspan="3"></th>
    </tr>

    <% @objects.each do |object| %>
      <tr>
        <td><%= object[:objectname] %></td>
        <td><%= object[:objectsize] %></td>
        <td><%= object[:lastmodified] %></td>
        <td><%= link_to 'Download', controller: "objects", action: "show", id: object[:objectname] %></td>
        <td><%= link_to 'Delete', controller: "objects", action: "destroy", id: "#{object[:objectname]}", method: :delete, :remote => true %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Back', buckets_path %>
